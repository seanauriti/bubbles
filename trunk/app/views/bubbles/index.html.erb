<%= periodically_call_remote :url => { :action => :refresh_bubbles, :last_updated => @last_retrieval } %>  


<div id='update_placeholder'></div>
<% @bubbles.each do |b| %> 
	<% div_for b, :class => 'header_style' do %>
		<div class="userlink">
	   	<%= link_to b.user.login, :controller=> "bubbles", :action => "list", :id => b.user.login %> <a href="aim:goim?screenname=<%= b.user.aim %>"><img src="http://big.oscar.aol.com/<%= b.user.aim %>?on_url=http://www.aim.com/remote/gr/MNB_online.gif&off_url=http://www.aim.com/remote/gr/MNB_offline.gif" alt="aim status" title="aim online indicator" border="0"/></a> <em>is churning on ...</em></div>
	 
		<div class="bubble_body">
		<%= b.converted_body %>
		<div class="bubble_delete">
			<% if b.user == current_user %>
				<%= link_to_remote '(pop)', :url => bubble_path(b),  :method => :delete %>
		    <% end %>
		</div>
		</div>
		

		
	<% end %>
<% end %>
