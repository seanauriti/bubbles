<table bgcolor="white" width="240"><tr><td>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
	<p>
		<%= label :login, 'Login' %><br/>
		<%= f.text_field :login %>
	</p>
	<p>
		<%= label :aim, 'AIM' %><br/>
		<%= f.text_field :aim %>
	</p>
	<p>
		<%= label :email, 'Email' %><br/>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= label :password, 'Password' %><br/>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= label :password_confirmation, 'Confirm Password' %><br/>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= submit_tag 'Sign up' %>
	</p>
<% end -%>
</td></tr></table>
